@model DatatableCRUD.Models.Employee

<h2>Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if(Model != null && Model.EmployeeId > 0)
    {
        @Html.HiddenFor(e => e.EmployeeId)
    }

    <div class="form-group">
        <!--
            <label>First Name</label>
        -->
        @Html.LabelFor(e => e.FirstName)
        @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control"})
        @Html.ValidationMessageFor(e => e.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.LastName)
        @Html.TextBoxFor(e => e.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.EmailId)
        @Html.TextBoxFor(e => e.EmailId, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.EmailId)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.City)
        @Html.TextBoxFor(e => e.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.City)
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.country)
        @Html.TextBoxFor(e => e.country, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.country)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}
