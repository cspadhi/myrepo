@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if(!Model.Any())
{
    <p>No movie found.</p>
}
else
{
    <div>@Html.ActionLink("Add New Movie", "New", "Movies")</div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.Genre.Name</td>
                    <td>
                    @Html.ActionLink("View", "Details", "Movies", new { id = movie.Id }, null)
                    | @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
